<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/message_user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_user_icon"
        android:text="张三"/>
    <TextView
        android:id="@+id/message_user_message"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_user_icon"
        android:layout_below="@id/message_user_name"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2017-10-11"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#ece9e9"
        android:layout_below="@id/message_user_icon"/>

</RelativeLayout>