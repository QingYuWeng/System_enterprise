<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Detail_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#29ffffff"
    android:layout_marginTop="100dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Detail_Student_Icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user" />
    <TextView
        android:id="@+id/Detail_Student_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Detail_Student_Icon"
        android:text="余文青"
        android:textColor="#ffff"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/Detail_Student_Age"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Detail_Student_Name"
        android:layout_centerHorizontal="true"
        android:text="男 21岁"
        android:textColor="#ffff"/>


</RelativeLayout>